                <row>
                    <entry>28</entry>
                    <entry>
                        <para>
                            删除存储域
                        </para>
                        <orderedlist numeration="arabic">
                            <listitem>
                                <para>
                                    在Storage列表下，选择指定的存储域
                                </para>
                            </listitem>
                            <listitem>
                                <para>
                                    将该存储域变为Maintenance模式
                                </para>
                            </listitem>
                            <listitem>
                                <para>
                                    将该存储域与数据中心Detach
                                </para>
                            </listitem>
                            <listitem>
                                <para>
                                    点击Remove，在Remove Storage确认框选择一个
                                    host从列表下
                                </para>
                            </listitem>
                            <listitem>
                                <para>
                                    点击OK
                                </para>
                            </listitem>
                        </orderedlist>
